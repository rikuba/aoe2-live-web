{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "lib": ["ES2019", "ES2020.Promise", "ES2020.BigInt", "ES2020.String"],
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "outDir": "dist/",
    "rootDir": "src/",
    "isolatedModules": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"]
}
